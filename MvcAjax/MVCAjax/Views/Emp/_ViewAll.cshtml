@model IEnumerable<EmpPayRollMVCAjax.Models.EmpModel>


    <div class="col-md-8 offset-md-2">
        <div class="header-content header">
    <div class="logo">
        <a class="icon"> <img src="~/Assets/logo.png" class="logoicon"></a>
        <div >
             @*<h1 class="text-left"> Employee Payroll</h1>*@
            <span class="emp-text">EMPLOYEE</span><br>
            <span class="emp-text payroll">PAYROLL</span>
        </div>
    </div>
</div>
        @*<h1 class="text-center"> Employee Payroll</h1>*@


        <table class="table">
                <thead class="thead-light">
                    <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmpId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Profileimage)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <th>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit","Emp",null,Context.Request.Scheme)','New Employee')" class="btn btn-success text-white"><i class="fas fa-random"></i>AddNew</a>
                </th>
            </tr>
        </thead>
        <tbody>
             @foreach (var item in Model)
             {
                 <tr>
                     <td>
                         @Html.DisplayFor(modelItem => item.EmpId)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Name)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Gender)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Department)
                     </td>
                     <td>
                         <img src="@Url.Content(item.Profileimage)" class="imgindex" />
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.StartDate)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Salary)
                     </td>
                     <td>
                         @Html.DisplayFor(modelItem => item.Notes)
                     </td>
                     <td>
                         <div>
                              <a onclick="showInPopup('@Url.Action("AddOrEdit","Emp",new {id=item.EmpId},Context.Request.Scheme)','Update Employee')" class="btn btn-info text-white"><i class="fas fa-pencil-alt" ></i> Edit</a>
                                <form asp-action="Delete" asp-route-id="@item.EmpId" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                   <input type="hidden" asp-for="@item.EmpId" />
                                   <input type="submit" value="Delete" class="btn btn-danger" />
                                </form>
                          </div>
                     </td>
                 </tr>
             }
         </tbody>
         </table>
    </div>