@model IEnumerable<MvcApp.Models.UserModel>

  <div class="col-md-8 offset-md-2">
        <div class="header-content header">
    <div class="logo">
        <a class="icon"></a>
        <div >
            <span class="user-text">My WebSites</span><br>
           
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WebSite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AltEmail)
            </th>
             <th>
                    <a onclick="showInPopup('@Url.Action("Create","UserData",null,Context.Request.Scheme)','New Data')" class="btn btn-success text-white"><i class="fas fa-random"></i>AddNew</a>
             </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WebSite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AltEmail)
            </td>
            <td>
                <div>
                     <a onclick="showInPopup('@Url.Action("AddOrEdit","UserData",new {id=item.Id},Context.Request.Scheme)','Update Wesite data')" class="btn btn-info text-white"><i class="fas fa-pencil-alt" ></i> Edit</a>
                       <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                          <input type="hidden" asp-for="@item.Id" />
                          <input type="submit" value="Delete" class="btn btn-danger" />
                       </form>
                 </div>
            </td>
        </tr>
}
    </tbody>
</table>
